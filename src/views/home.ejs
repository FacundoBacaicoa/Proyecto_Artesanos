<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Home - Artesanos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/home.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://unpkg.com/@phosphor-icons/web"></script> <!-- íconos -->
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

  <!-- HEADER -->
  <header class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4 py-2">
    <span class="navbar-brand fw-bold fs-4">Artesanos</span>

    <div class="ms-auto d-flex align-items-center gap-3 position-relative">
      <span class="fw-semibold"><i class="bi bi-person"></i> <%= user.name %> <%= user.last_name %></span>

      <!-- Dropdown de configuración -->
      <div class="dropdown">
        <a href="#" class="text-dark fs-5 dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown">
          <li><a class="dropdown-item" href="/auth/change-password">Cambiar contraseña</a></li>
          <li><a class="dropdown-item" href="#">Detalles del perfil</a></li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <form action="/auth/logout" method="POST" class="px-3">
              <button type="submit" class="btn btn-link dropdown-item p-0">Cerrar sesión</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </header>

  <!-- CONTENIDO -->
  <main class="flex-grow-1 container mt-4">
    <h2 class="mb-3">¡Bienvenido, <%= user.name %>!</h2>

    <ul class="list-group mb-4">
      <li class="list-group-item"><strong>Nombre de usuario:</strong> <%= user.username %></li>
      <li class="list-group-item"><strong>Email:</strong> <%= user.email %></li>
    </ul>
    
    <!-- Mostrar álbumes del usuario -->
     <div class="row">
      <div class="col"><h4 class="mb-3">Mis álbumes</h4></div>
      <div class="col"><button data-bs-toggle="modal" data-bs-target="#nuevoAlbumModal">Nuevo Álbum</button></div>
     </div>
    

    <% if (albums && albums.length > 0) { %>
        <ul class="list-group mb-4">
          <% albums.forEach(function(album) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong><%= album.title %></strong>
                <% if (album.description) { %>
                  <br><small class="text-muted"><%= album.description %></small>
                <% } %>
              </div>
              <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#albumModal<%= album.id %>">
                Ver álbum
              </button>
            </li>
          <% }); %>
        </ul>
    <% } else { %>
      <p class="text-muted">No tienes álbumes aún.</p>
    <% } %>
    <%- include('./partials/modales-home') %>

  </main>

  <!-- FOOTER -->
  <footer class="bg-white border-top py-3 mt-auto text-center">
    <!-- futuro contenido -->
  </footer>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
