<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Buscar usuarios</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/home.css" />
</head>

<body class="d-flex flex-column min-vh-100">
  <!-- HEADER -->
  <header class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4 py-2">
    <div class="container-fluid d-flex align-items-center">
      <!-- Marca -->
      <span class="navbar-brand fw-bold fs-4 mb-0">Artesanos</span>

      <!-- Buscador de usuarios, centrado y mismo tamaño que en home -->
      <div class="flex-grow-1 d-flex justify-content-center">
        <form class="d-none d-md-flex me-3 w-50" action="/users/search" method="GET">
          <input type="text" class="form-control me-2" name="query" placeholder="Buscar usuarios..."
            aria-label="Buscar">
          <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
        </form>
      </div>

      <!-- Menú usuario + volver -->
      <div class="d-flex align-items-center gap-2 gap-md-3">
        <!-- Botón casa para volver -->
        <a href="/home" class="btn btn-outline-secondary btn-sm" title="Volver al inicio">
          <i class="bi bi-house"></i>
        </a>

        <!-- Notificaciones -->
        <div class="dropdown">
          <button class="btn btn-outline-secondary position-relative" id="notificationsDropdown"
            data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-bell"></i>
            <% if (notifications && notifications.length> 0) { %>
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <%= notifications.length %>
              </span>
              <% } %>
          </button>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm p-2" aria-labelledby="notificationsDropdown"
            style="min-width: 300px;">
            <% if (notifications.length===0) { %>
              <li class="text-center text-muted">Sin notificaciones</li>
              <% } else { %>
                <% notifications.forEach(n=> { %>
                  <li class="mb-2">
                    <div class="d-flex justify-content-between align-items-start">
                      <small>
                        <%= n.message %>
                      </small>
                      <% if (n.type==='friendship' ) { %>
                        <form action="/users/<%= n.reference_id %>/friend-request-response" method="POST"
                          class="d-flex gap-1">
                          <input type="hidden" name="notification_id" value="<%= n.id %>">
                          <button name="action" value="accept" class="btn btn-sm btn-success" title="Aceptar"><i
                              class="bi bi-check"></i></button>
                          <button name="action" value="reject" class="btn btn-sm btn-danger" title="Rechazar"><i
                              class="bi bi-x"></i></button>
                        </form>
                        <% } else { %>
                          <button type="button" class="btn btn-sm btn-link text-muted p-0"
                            onclick="deleteNotification('<%= n.id %>', this)">
                            <i class="bi bi-x-lg"></i>
                          </button>
                          <% } %>
                    </div>
                  </li>
                  <% }); %>
                    <% } %>
          </ul>
        </div>

        <!-- Nombre del usuario -->
        <span class="fw-semibold d-none d-md-block">
          <i class="bi bi-person"></i>
          <%= user.name %>
            <%= user.last_name %>
        </span>
        <!-- Menú desplegable -->
        <div class="dropdown">
          <a href="#" class="text-dark fs-5 dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown"
            aria-expanded="false"></a>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="/auth/change-password">Cambiar contraseña</a></li>
            <li><a class="dropdown-item" href="/auth/details-profile">Detalles del perfil</a></li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <form action="/auth/logout" method="POST" class="px-3">
                <button type="submit" class="btn btn-link dropdown-item p-0">Cerrar sesión</button>
              </form>
            </li>
          </ul>
        </div>

      </div>
    </div>
  </header>


  <!-- CONTENIDO -->
  <main class="flex-grow-1 container mt-4">
    <div class="container py-4">
      <h2 class="mb-4">Resultados de la búsqueda</h2>

      <% if (error) { %>
        <div class="alert alert-warning"><i class="bi bi-exclamation-circle"></i>
          <%= error %>
        </div>
        <% } else { %>

          <!-- USUARIOS -->
          <% if (results.users && results.users.length> 0) { %>
            <h4 class="mt-4"><i class="bi bi-people"></i> Usuarios</h4>
            <div class="row">
              <% results.users.forEach(u=> { %>
                <div class="col-md-6">
                  <div class="card mb-3 shadow-sm">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div class="d-flex align-items-center gap-3">
                        <% if (u.image_profile) { %>
                          <img src="<%= u.image_profile %>" alt="Perfil" class="rounded-circle"
                            style="width: 50px; height: 50px; object-fit: cover;">
                          <% } else { %>
                            <div
                              class="bg-secondary text-white d-flex justify-content-center align-items-center rounded-circle"
                              style="width: 50px; height: 50px;">
                              <i class="bi bi-person fs-5"></i>
                            </div>
                            <% } %>
                              <div>
                                <h6 class="mb-0">
                                  <%= u.name %>
                                    <%= u.last_name %>
                                </h6>
                                <p class="mb-0 text-muted small">@<%= u.username %>
                                </p>
                              </div>
                      </div>
                      <a href="/users/<%= u.id %>" class="btn btn-sm btn-outline-primary">Ver perfil</a>
                    </div>
                  </div>
                </div>
                <% }) %>
            </div>
            <% } %>

              <!-- ÁLBUMES -->
              <% if (results.albums && results.albums.length> 0) { %>
                <h4 class="mt-4"><i class="bi bi-journal-album"></i> Álbumes</h4>
                <div class="row">
                  <% results.albums.forEach(a=> { %>
                    <div class="col-md-4">
                      <div class="card mb-3 shadow-sm h-100">
                        <% if (a.front_page) { %>
                          <img src="<%= a.front_page %>" class="card-img-top" style="height: 150px; object-fit: cover;">
                          <% } %>
                            <div class="card-body">
                              <h6 class="card-title text-truncate">
                                <%= a.title %>
                              </h6>
                              <p class="text-muted small mb-1">Por @<%= a.owner_username %>
                              </p>
                              <a href="/albums/<%= a.id %>" class="btn btn-sm btn-link p-0">Ver álbum</a>
                            </div>
                      </div>
                    </div>
                    <% }) %>
                </div>
                <% } %>

                  <!-- IMÁGENES -->
                  <% if (results.images && results.images.length> 0) { %>
                    <h4 class="mt-4"><i class="bi bi-image"></i> Imágenes</h4>
                    <div class="row">
                      <% results.images.forEach(img=> { %>
                        <div class="col-md-3">
                          <div class="card mb-3 shadow-sm h-100">
                            <img src="<%= img.routh_image %>" class="card-img-top"
                              style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                              <h6 class="card-title text-truncate">
                                <%= img.title || 'Sin título' %>
                              </h6>
                              <p class="text-muted small mb-0">En álbum de @<%= img.owner_username %>
                              </p>
                            </div>
                          </div>
                        </div>
                        <% }) %>
                    </div>
                    <% } %>

                      <% } %>

                        <a href="/home" class="btn btn-link mt-3"><i class="bi bi-arrow-left"></i> Volver al inicio</a>


    </div>
  </main>

  <footer class="py-3 mt-auto text-center">
    <!-- Pie de página -->
  </footer>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    // Lógica de Sockets para notificaciones
    const socket = io();
    const authUser = <% - user ? JSON.stringify(user) : 'null' %>;

    if (authUser) {
      socket.emit('join', authUser.id);

      const notificationsDropdown = document.getElementById('notificationsDropdown');
      const notificationList = document.querySelector('.dropdown-menu[aria-labelledby="notificationsDropdown"]');

      socket.on('notification', (data) => {
        console.log('Nueva notificación:', data);

        // Actualizar contador
        let badge = notificationsDropdown.querySelector('.badge');
        if (!badge) {
          badge = document.createElement('span');
          badge.className = 'position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger';
          notificationsDropdown.appendChild(badge);
          badge.innerText = '1';
        } else {
          badge.innerText = parseInt(badge.innerText) + 1;
        }

        // Quitar mensaje de "Sin notificaciones"
        const emptyMsg = notificationList.querySelector('.text-muted');
        if (emptyMsg) emptyMsg.remove();

        // Agregar a la lista
        const li = document.createElement('li');
        li.className = 'mb-2';

        let actionsHtml = '';
        if (data.type === 'friendship') {
          actionsHtml = `
            <form action="/users/${data.reference_id}/friend-request-response" method="POST" class="d-flex gap-1">
              <input type="hidden" name="notification_id" value="${data.id || ''}">
              <button name="action" value="accept" class="btn btn-sm btn-success" title="Aceptar"><i class="bi bi-check"></i></button>
              <button name="action" value="reject" class="btn btn-sm btn-danger" title="Rechazar"><i class="bi bi-x"></i></button>
            </form>
          `;
        } else {
          actionsHtml = `
            <form action="/notifications/delete" method="POST">
              <input type="hidden" name="id" value="${data.id || ''}">
              <button type="submit" class="btn btn-sm btn-link text-muted p-0"><i class="bi bi-x-lg"></i></button>
            </form>
          `;
        }

        li.innerHTML = `
          <div class="d-flex justify-content-between align-items-start">
            <small>${data.message}</small>
            ${actionsHtml}
          </div>
        `;
        notificationList.prepend(li);
      });

      // Marcar como leídas
      notificationsDropdown.addEventListener('show.bs.dropdown', () => {
        const badge = notificationsDropdown.querySelector('.badge');
        if (badge) {
          fetch('/notifications/read-all', { method: 'POST' })
            .then(res => res.json())
            .then(data => {
              if (data.success) { badge.remove(); }
            })
            .catch(err => console.error('Error al marcar leídas:', err));
        }
      });
    }

    // Función para borrar notificación sin recargar
    function deleteNotification(id, btn) {
      const li = btn.closest('li');
      fetch('/notifications/delete-ajax', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id })
      })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            li.remove();
            const notificationList = document.querySelector('.dropdown-menu[aria-labelledby="notificationsDropdown"]');
            if (notificationList.querySelectorAll('li').length === 0) {
              notificationList.innerHTML = '<li class="text-center text-muted">Sin notificaciones</li>';
            }
          }
        })
        .catch(err => console.error('Error:', err));
    }
  </script>
</body>


</html>