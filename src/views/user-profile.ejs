<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Perfil - <%= profile.name %>
      <%= profile.last_name %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/home.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">

  <!-- HEADER -->
  <header class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4 py-2">
    <div class="container-fluid d-flex align-items-center">
      <!-- Marca -->
      <span class="navbar-brand fw-bold fs-4 mb-0">Artesanos</span>

      <!-- Buscador: Solo Desktop en el centro -->
      <div class="flex-grow-1 d-flex justify-content-center mx-2 mx-md-3">
        <form class="d-none d-md-flex w-100" action="/users/search" method="GET" style="max-width: 400px;">
          <input type="text" class="form-control me-2" name="query" placeholder="Buscar artesanos..."
            aria-label="Buscar">
          <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
        </form>
      </div>

      <!-- Menú usuario + volver -->
      <div class="d-flex align-items-center gap-2 gap-md-3 ms-auto">
        <!-- Botón de búsqueda para móviles -->
        <button class="btn btn-outline-primary d-md-none" data-bs-toggle="modal" data-bs-target="#searchModal">
          <i class="bi bi-search"></i>
        </button>
        <!-- Botón casa para volver -->
        <a href="/home" class="btn btn-outline-secondary btn-sm" title="Volver al inicio">
          <i class="bi bi-house"></i>
        </a>
        <!-- Notificaciones -->
        <div class="dropdown">
          <button class="btn btn-outline-secondary position-relative" id="notificationsDropdown"
            data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-bell"></i>
            <% if (notifications && notifications.length> 0) { %>
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <%= notifications.length %>
              </span>
              <% } %>
          </button>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm p-2" aria-labelledby="notificationsDropdown"
            style="min-width: 300px;">
            <% if (notifications.length===0) { %>
              <li class="text-center text-muted">Sin notificaciones</li>
              <% } else { %>
                <% notifications.forEach(n=> { %>
                  <li class="mb-2">
                    <div class="d-flex justify-content-between align-items-start">
                      <small>
                        <%= n.message %>
                      </small>
                      <% if (n.type==='friendship' ) { %>
                        <form action="/users/<%= n.reference_id %>/friend-request-response" method="POST"
                          class="d-flex gap-1">
                          <input type="hidden" name="notification_id" value="<%= n.id %>">
                          <button name="action" value="accept" class="btn btn-sm btn-success" title="Aceptar"><i
                              class="bi bi-check"></i></button>
                          <button name="action" value="reject" class="btn btn-sm btn-danger" title="Rechazar"><i
                              class="bi bi-x"></i></button>
                        </form>
                        <% } else { %>
                          <button type="button" class="btn btn-sm btn-link text-muted p-0"
                            onclick="deleteNotification('<%= n.id %>', this)">
                            <i class="bi bi-x-lg"></i>
                          </button>
                          <% } %>
                    </div>
                  </li>
                  <% }); %>
                    <% } %>
          </ul>
        </div>
        <!-- Nombre del usuario -->
        <span class="fw-semibold d-none d-md-block">
          <i class="bi bi-person"></i>
          <% if (user) { %>
            <%= user.name %>
              <%= user.last_name %>
                <% } else { %>
                  Invitado
                  <% } %>
        </span>
        <!-- Menú desplegable -->
        <div class="dropdown">
          <a href="#" class="text-dark fs-5 dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown"
            aria-expanded="false"></a>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="/auth/change-password">Cambiar contraseña</a></li>
            <li><a class="dropdown-item" href="/auth/details-profile">Detalles del perfil</a></li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <form action="/auth/logout" method="POST" class="px-3">
                <button type="submit" class="btn btn-link dropdown-item p-0">Cerrar sesión</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <!-- CONTENIDO -->
  <main class="flex-grow-1 container mt-4">

    <!-- Tarjeta de perfil -->
    <div class="card mb-4 shadow-sm">
      <div class="card-body d-flex align-items-center">
        <div class="me-3">
          <% if (profile.image_profile) { %>
            <img src="<%= profile.image_profile %>" alt="Perfil" class="rounded-circle border"
              style="width: 200px; height: 200px; object-fit: cover;">
            <% } else { %>
              <div class="rounded-circle bg-secondary d-inline-flex justify-content-center align-items-center"
                style="width: 200px; height: 200px;">
                <i class="bi bi-person text-white fs-1"></i>
              </div>
              <% } %>
        </div>
        <div>
          <h4 class="mb-1">
            <%= profile.name %>
              <%= profile.last_name %>
          </h4>
          <p class="mb-0 text-muted"><i class="bi bi-envelope"></i>
            <%= profile.email %>
          </p>
          <p class="mb-0 text-muted"><i class="bi bi-person-circle"></i> <strong>@<%= profile.username %></strong></p>
          <% if (profile.stats) { %>
            <div class="d-flex gap-3 mt-2">
              <span class="badge bg-light text-dark border">
                <i class="bi bi-image"></i>
                <%= profile.stats.imgCount %> Fotos
              </span>
              <span class="badge bg-light text-dark border">
                <i class="bi bi-chat-dots"></i>
                <%= profile.stats.commentCount %> Comentarios
              </span>
              <span class="badge bg-light text-dark border">
                <i class="bi bi-people"></i>
                <%= profile.stats.friendCount %> Amigos
              </span>
            </div>
            <% } %>

              <% if (user && profile.id !==user.id) { %>
                <div class="mt-3">
                  <% if (friendshipStatus==='accepted' ) { %>
                    <div class="d-flex align-items-center gap-2">
                      <button class="btn btn-secondary" type="button" disabled>
                        <i class="bi bi-people-fill"></i> Amigos
                      </button>
                      <form action="/users/<%= profile.id %>/delete-friend" method="POST"
                        onsubmit="return confirm('¿Eliminar de tus amigos?');">
                        <button class="btn btn-outline-danger" type="submit" title="Eliminar de amigos">
                          <i class="bi bi-x-lg"></i>
                        </button>
                      </form>
                    </div>
                    <% } else if (friendshipStatus==='pending' ) { %>
                      <button class="btn btn-warning" type="button" disabled>
                        <i class="bi bi-hourglass-split"></i> Solicitud enviada
                      </button>
                      <% } else if (friendshipStatus==='rejected' ) { %>
                        <form action="/users/<%= profile.id %>/request-friend" method="POST">
                          <button class="btn btn-success" type="submit">
                            <i class="bi bi-person-plus"></i> Volver a enviar solicitud
                          </button>
                        </form>
                        <% } else { %>
                          <form action="/users/<%= profile.id %>/request-friend" method="POST">
                            <button class="btn btn-success" type="submit">
                              <i class="bi bi-person-plus"></i> Enviar solicitud de amistad
                            </button>
                          </form>
                          <% } %>
                </div>
                <% } %>
        </div>
      </div>
    </div>

    <!-- Álbumes del usuario -->
    <h4 class="mb-3">Álbumes de <%= profile.name %>
    </h4>

    <% if (areFriends || isPublicPortfolio) { %>
      <% if (isPublicPortfolio && !areFriends && (user && profile.id !==user.id)) { %>
        <div class="badge bg-success mb-3"><i class="bi bi-eye"></i> Modo Vitrina Activo</div>
        <% } %>
          <% if (albums && albums.length> 0) { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mb-4">
              <% albums.forEach(function(album) { %>
                <div class="col">
                  <div class="card h-100 shadow-sm">
                    <% if (album.front_page) { %>
                      <img src="<%= album.front_page %>" class="card-img-top" alt="Portada"
                        style="object-fit: cover; height: 180px;">
                      <% } else { %>
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                          style="height: 180px;">
                          <i class="bi bi-image fs-1"></i>
                        </div>
                        <% } %>
                          <div class="card-body">
                            <h5 class="card-title">
                              <%= album.title %>
                            </h5>
                            <% if (album.description) { %>
                              <p class="card-text text-muted">
                                <%= album.description %>
                              </p>
                              <% } %>
                                <!-- Botón para abrir el modal -->
                                <div class="d-flex justify-content-center mt-3">
                                  <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="modal"
                                    data-bs-target="#albumModal<%= album.id %>">
                                    Ver álbum
                                  </button>
                                </div>
                          </div>
                  </div>
                </div>
                <% }); %>
            </div>
            <% } else { %>
              <p class="text-muted">Este usuario aún no tiene álbumes.</p>
              <% } %>
                <% } else { %>
                  <div class="alert alert-info text-center mt-4">
                    <i class="bi bi-info-circle"></i>
                    Para ver más información y los álbumes de este usuario debes ser su amigo.
                  </div>
                  <% } %>

  </main>

  <!-- Incluye los modales de álbum e imágenes solo si puede ver el contenido -->
  <% if (areFriends || isPublicPortfolio) { %>
    <%- include('partials/modal-album-profile.ejs') %>
      <% } %>

        <footer class="bg-white border-top py-3 mt-auto text-center">
          <!-- Pie de página -->
        </footer>

        <!-- MODAL DE BÚSQUEDA (MÓVIL) -->
        <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Buscar en Artesanos</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                  aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/users/search" method="GET">
                  <div class="input-group">
                    <input type="text" class="form-control" name="query" placeholder="Nombre, usuario o tags..."
                      autoFocus>
                    <button class="btn btn-primary" type="submit">Buscar</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script>
          // Lógica de Sockets para notificaciones
          const socket = io();
          const authUser = <% - user ? JSON.stringify(user) : 'null' %>;

          if (authUser) {
            socket.emit('join', authUser.id);

            const notificationsDropdown = document.getElementById('notificationsDropdown');
            const notificationList = document.querySelector('.dropdown-menu[aria-labelledby="notificationsDropdown"]');

            socket.on('notification', (data) => {
              console.log('Nueva notificación:', data);

              // Actualizar contador
              let badge = notificationsDropdown.querySelector('.badge');
              if (!badge) {
                badge = document.createElement('span');
                badge.className = 'position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger';
                notificationsDropdown.appendChild(badge);
                badge.innerText = '1';
              } else {
                badge.innerText = parseInt(badge.innerText) + 1;
              }

              // Quitar mensaje de "Sin notificaciones"
              const emptyMsg = notificationList.querySelector('.text-muted');
              if (emptyMsg) emptyMsg.remove();

              // Agregar a la lista
              const li = document.createElement('li');
              li.className = 'mb-2';

              let actionsHtml = '';
              if (data.type === 'friendship') {
                actionsHtml = `
                  <form action="/users/${data.reference_id}/friend-request-response" method="POST" class="d-flex gap-1">
                    <input type="hidden" name="notification_id" value="${data.id || ''}">
                    <button name="action" value="accept" class="btn btn-sm btn-success" title="Aceptar"><i class="bi bi-check"></i></button>
                    <button name="action" value="reject" class="btn btn-sm btn-danger" title="Rechazar"><i class="bi bi-x"></i></button>
                  </form>
                `;
              } else {
                actionsHtml = `
                  <form action="/notifications/delete" method="POST">
                    <input type="hidden" name="id" value="${data.id || ''}">
                    <button type="submit" class="btn btn-sm btn-link text-muted p-0"><i class="bi bi-x-lg"></i></button>
                  </form>
                `;
              }

              li.innerHTML = `
                <div class="d-flex justify-content-between align-items-start">
                  <small>${data.message}</small>
                  ${actionsHtml}
                </div>
              `;
              notificationList.prepend(li);
            });

            // Marcar como leídas
            notificationsDropdown.addEventListener('show.bs.dropdown', () => {
              const badge = notificationsDropdown.querySelector('.badge');
              if (badge) {
                fetch('/notifications/read-all', { method: 'POST' })
                  .then(res => res.json())
                  .then(data => {
                    if (data.success) { badge.remove(); }
                  })
                  .catch(err => console.error('Error al marcar leídas:', err));
              }
            });
          }

          // Función para borrar notificación sin recargar
          function deleteNotification(id, btn) {
            const li = btn.closest('li');
            fetch('/notifications/delete-ajax', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ id })
            })
              .then(res => res.json())
              .then(data => {
                if (data.success) {
                  li.remove();
                  const notificationList = document.querySelector('.dropdown-menu[aria-labelledby="notificationsDropdown"]');
                  if (notificationList.querySelectorAll('li').length === 0) {
                    notificationList.innerHTML = '<li class="text-center text-muted">Sin notificaciones</li>';
                  }
                }
              })
              .catch(err => console.error('Error:', err));
          }
        </script>
        <script>
          // Script para habilitar validaciones visuales de Bootstrap
          (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
              form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault()
                  event.stopPropagation()
                }
                form.classList.add('was-validated')
              }, false)
            })
          })()
        </script>
</body>

</html>